<body>
  <p><strong>Books</strong>
  </p>
<% @books.each do |f| %>
  <p>Title</p>
  <span><%= f.title %></span>
  <p>Body</p>
  <span><%= f.body %></span>
  <!-- 各ボタンを配置 -->
<% end %>

<h1>新規投稿</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

</body>